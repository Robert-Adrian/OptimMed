<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="415dp"
        android:layout_height="366dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/person_icon"
                android:drawableRight="@drawable/mood_24px"
                android:gravity="left"
                android:lines="3"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:paddingLeft="60dp"
                android:paddingRight="25dp"
                android:shadowColor="@android:color/transparent"
                android:singleLine="false"
                android:text="Pacient 1 \n Pacientul 1 este intr-o stare buna de sanatate \n Click pe pacient pentru un raport complet"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="11dp"

                android:visibility="visible"
                app:layout_constraintBaseline_toBaselineOf="@+id/editText5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/editText5" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton5"
        android:layout_width="169dp"
        android:layout_height="143dp"
        android:layout_marginTop="44dp"
        android:background="#FFFFFF"
        android:clickable="true"
        app:backgroundTint="#34CC9E"
        app:elevation="6dp"
        app:fabSize="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        app:srcCompat="@drawable/search" />

    <include
        layout="@layout/medic_pacientsearchbox"
        android:layout_width="412dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="313dp"
        android:layout_height="290dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/medic_upper_icon_cutted" />


</androidx.constraintlayout.widget.ConstraintLayout>